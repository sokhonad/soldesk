{% extends 'base.html.twig' %}
{% block title %} {{ app.user.getNom() }}{% endblock %}

    {% block body %}
        <h1>Liste des utilisateurs</h1>
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Email
                <th>consultation</th>

            </tr>
            </thead>
            {% for user in users %}
                <tr>
                    <td>{{ user.getNom() }}</td>
                    <td>{{ user.getUsername() }}</td>
                    <td><a  href="{{ path('cree_ticket_u',{'id':user.getId()}) }}"><button type='button' class='btn btn-info'>consulter</button></a> </td>
                </tr>
            {% endfor %}
        </table>


    {% endblock %}

